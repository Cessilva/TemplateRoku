<?xml version = "1.0" encoding = "utf-8" ?>
<component name = "RowListItem" extends = "Group" >
  <interface > 
    <field id = "itemContent" type = "node"  onChange = "showcontent"/>
    <field id = "focusPercent" type = "float" onChange = "showfocus"/> 
    <field id = "rowFocusPercent" type = "float" onChange = "showrowfocus"/>
  </interface>
  <script type = "text/brightscript" uri="pkg:/components/RowListItem/RowListItem.brs/"></script>
  <children >
    <Poster 
      id = "itemPoster" 
      translation = "[ 10, 10 ]" 
      width = "500" 
      height = "280" 
      scaleRotateCenter = "[ 256.0, 144.0 ]" >
      <Rectangle 
        id = "itemMask" 
        color = "0x00000000" 
        opacity = "0.75" 
        width = "512" 
        height = "288" 
        scaleRotateCenter = "[ 256.0, 144.0 ]"/>
    </Poster>
  </children>
</component>

